<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".signup.SignUpActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationview_home_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_signup_name"
        app:lottie_autoPlay="true"
        app:lottie_fileName="happy_bird.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/textview_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "이름"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <EditText
        android:id="@+id/editext_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_signup_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "깃허브 아이디"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editext_signup_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editext_signup_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID를 입력해주세요"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_signup_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "비밀번호"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editext_signup_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editext_signup_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번를 입력해주세요"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_pwd"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editext_signup_pwd"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>